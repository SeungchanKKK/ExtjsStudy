Ext.onReady(function(){
	//Ext.window.window
	Ext.create("Ext.panel.Panel",{
		border : true,
		width : 300,
		height : 300,
		renderTo : Ext.getBody(),
		items : [{
			xtype : 'button',
			text : '패널버튼'
		}]
	})
	var win = Ext.create("Ext.window.Window",{
		width : 300,
		height : 300,
		minWidth : 250,
		minHeight : 250,
		autoShow : true,
		title : 'Window Title',
		items : [{
			xtype : 'button',
			text : '버튼'
		}],
		modal : true,
		//resizable : false
	});
}) 